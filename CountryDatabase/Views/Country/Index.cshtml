@using CountryDatabase.Models;
@{
  Layout = "_Layout";
}

<div class="container">
  <p>This is a website for the Country Database</p>
  @if (@Model.Count == 0)
  {
      <p>You have no countries in the database!</p>
  }

  @if (@Model.Count != 0)
  {
      @foreach (CountryClass country in @Model)
        {
            <li><a href="/countries/@country.GetCode()">Country: @country.GetName()</a></li>
        }
  }
</div>
